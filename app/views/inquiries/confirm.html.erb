<%= form_for @inquiry, :url => inquiries_thanks_path do |f| %>

<h2>お問い合わせ - 再度内容をご確認ください</h2>

<table>
  <tr>
    <th>名前</th>
    <td>
    <%= f.hidden_field :name %>
    <%= @inquiry.name %>
    </td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td>
    <%= f.hidden_field :email %>
    <%= @inquiry.email %>
    </td>
  </tr>
  <tr>
    <th>お問い合わせ内容</th>
    <td>
    <%= f.hidden_field :content %>
    <%= @inquiry.content %>
   </td>
  </tr>
</table>

<%= f.submit "この内容で登録する" %>

<% end %>

