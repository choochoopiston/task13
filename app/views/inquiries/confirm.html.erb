<%= form_for @inquiry, :url => inquiries_thanks_path do |f| %>

<h1>お問い合わせ - 再度内容をご確認ください</h1>

<table class="table">
  <tr>
    <th>名前</th>
    <td>
    <%= f.hidden_field :name %>
    <%= @inquiry.name %>
    </td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td>
    <%= f.hidden_field :email %>
    <%= @inquiry.email %>
    </td>
  </tr>
  <tr>
    <th>お問い合わせ内容</th>
    <td>
    <%= f.hidden_field :content %>
    <%= simple_format(@inquiry.content) %>
   </td>
  </tr>
</table>

<%= f.submit "この内容で登録する", :class => 'btn btn-primary' %>

<% end %>

<%= form_for @inquiry, :url => inquiry_path do |f| %>

<%= f.hidden_field :name %>
<%= f.hidden_field :email %>
<%= f.hidden_field :content %>

<%= f.submit "やっぱり内容を修正する", name: 'BTI', :class => 'btn btn-primary' %>

<% end %>